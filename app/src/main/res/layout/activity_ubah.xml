<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ivory"
    android:padding="16dp"
    tools:context=".UbahActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Anggota"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation ="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama :"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <EditText
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="14"
                android:hint="Tulis Nama Anda"
                android:textStyle="bold"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat :"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="14"
                android:hint="Tulis Alamat Anda"
                android:textStyle="bold"
                android:inputType="text"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No HP :"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="12"
                android:textStyle="bold"
                android:hint="Tulis Nomor Telepon Anda"
                android:inputType="phone"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis \nKelamin :"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_gravity="center"/>
<!--            <EditText-->
<!--                android:id="@+id/gender"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:ems="14"-->
<!--                android:hint="Tulis Jenis Kelamin Anda"-->
<!--                android:textStyle="bold"-->
<!--                android:inputType="textPersonName"-->
<!--                tools:ignore="TouchTargetSizeCheck" />-->
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/Rb_perempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
                <RadioButton android:id="@+id/Rb_Pria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi Pendaftaran :"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/location"
                android:paddingLeft="11dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/Hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text=""
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Foto :"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/resultfoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Pilih file..."
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/fotobaru"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/image"
                android:layout_marginLeft="10dp"
                android:paddingLeft="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="UPDATE"
        android:textSize="16sp"
        android:backgroundTint="@color/dark_brown"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="HAPUS"
        android:backgroundTint="@color/dark_brown"
        android:textStyle="bold" />

</LinearLayout>